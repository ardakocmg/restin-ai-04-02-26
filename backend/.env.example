# ── Restin.AI Backend Environment Template ──
# Copy this file to .env and fill in the values.
# NEVER commit .env to git!

# MongoDB Atlas
MONGO_URL=mongodb://localhost:27017
DB_NAME=restin_v2

# JWT Authentication (REQUIRED — generate with: python -c "import secrets; print(secrets.token_urlsafe(64))")
JWT_SECRET=

# Frontend build path
FRONTEND_BUILD_DIR=../frontend/build

# PII Encryption
SECRET_KEY=
PII_HASH_SALT=
PII_ENCRYPTION_KEY=

# Google
GOOGLE_API_KEY=
GOOGLE_PROJECT_ID=

# Nuki Smart Lock (optional)
NUKI_CLIENT_ID=
NUKI_CLIENT_SECRET=
NUKI_REDIRECT_URI=

# Cloudflare R2 Storage (optional)
R2_ACCOUNT_ID=
R2_ACCESS_KEY=
R2_SECRET_KEY=
R2_BUCKET_NAME=

# Prisma (same as MONGO_URL)
DATABASE_URL=
