{
    "extends": [
        "stylelint-config-standard"
    ],
    "plugins": [
        "stylelint-declaration-strict-value"
    ],
    "rules": {
        "declaration-strict-value": [
            [
                "/color/",
                "background-color",
                "border-color"
            ],
            {
                "ignoreValues": [
                    "transparent",
                    "inherit",
                    "initial",
                    "none",
                    "currentColor",
                    "unset"
                ],
                "message": "Do not use hardcoded colors. Use theme variables (var(--...)) to ensure Dark Mode compatibility."
            }
        ]
    }
}