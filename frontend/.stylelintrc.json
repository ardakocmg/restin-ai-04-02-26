{
    "extends": [
        "stylelint-config-standard"
    ],
    "plugins": [
        "stylelint-declaration-strict-value"
    ],
    "rules": {
        "scale-unlimited/declaration-strict-value": [
            [
                "/color/",
                "fill",
                "stroke",
                "background-color"
            ],
            {
                "ignoreValues": [
                    "currentColor",
                    "transparent",
                    "inherit",
                    "initial",
                    "none"
                ],
                "message": "Avoid hardcoded colors. Use CSS variables (var(--...)) for Dark Mode compatibility."
            }
        ],
        "color-no-hex": [
            true,
            {
                "message": "Do not use hex colors. Use theme variables."
            }
        ]
    }
}